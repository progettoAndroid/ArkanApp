<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/vaporwave"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:src="@drawable/arkanoidvw" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_anchor="@+id/imageView"
        app:layout_anchorGravity="center">

        <Button
            android:id="@+id/button_singleplayer"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/buttonshape_home"
            android:baselineAligned="false"
            android:fontFamily="@font/feasfbrg"
            android:onClick="sendMessageSingleplayer"
            android:text="@string/singleplayer"
            android:textColor="#FFFFFF"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeStepGranularity="2sp"/>

        <Button
            android:id="@+id/button_multiplayer"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="375dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/buttonshape_home"
            android:fontFamily="@font/feasfbrg"
            android:onClick="sendMessageMultiplayer"
            android:text="@string/multiplayer"
            android:textColor="#FFFFFF"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="25sp"
        />

        <Button
            android:id="@+id/button_impostazioni"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/buttonshape_home"
            android:fontFamily="@font/feasfbrg"
            android:onClick="sendMessageImpostazioni"
            android:text="@string/impostazioni"
            android:textColor="#FFFFFF"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="30sp"
           />

        <Button
            android:id="@+id/button_classifica"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="375dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/buttonshape_home"
            android:fontFamily="@font/feasfbrg"
            android:onClick="sendMessageClassifica"
            android:text="@string/classifica"
            android:textColor="#FFFFFF"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="30sp"
            />

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>