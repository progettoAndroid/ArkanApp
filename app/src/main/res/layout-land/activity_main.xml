<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/vaporwave"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/arkanoidvw"
        android:layout_gravity="center_horizontal"
        />


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:paddingTop="100dp">

            <TableRow>
                <Button
                    android:id="@+id/button_singleplayer"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/buttonshape_home"
                    android:baselineAligned="false"
                    android:fontFamily="@font/feasfbrg"
                    android:onClick="sendMessageSingleplayer"
                    android:text="@string/singleplayer"
                    android:textColor="#FFFFFF"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeStepGranularity="2sp"/>

                    <Button
                        android:id="@+id/button_multiplayer"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/buttonshape_home"
                        android:fontFamily="@font/feasfbrg"
                        android:onClick="sendMessageMultiplayer"
                        android:text="@string/multiplayer"
                        android:textColor="#FFFFFF"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="25sp"
                    />
            </TableRow >
            <TableRow>
                <Button
                    android:id="@+id/button_editor"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/buttonshape_home"
                    android:fontFamily="@font/feasfbrg"
                    android:onClick="sendMessageEditor"
                    android:text="@string/editor"
                    android:textColor="#FFFFFF"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeStepGranularity="2sp"/>


                    <Button
                        android:id="@+id/button_classifica"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/buttonshape_home"
                        android:fontFamily="@font/feasfbrg"
                        android:onClick="sendMessageRanking"
                        android:text="@string/classifica"
                        android:textColor="#FFFFFF"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="30sp"
                        />
            </TableRow>
        </TableLayout>
            <Button
                android:id="@+id/button_impostazioni"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/buttonshape_home"
                android:fontFamily="@font/feasfbrg"
                android:onClick="sendMessageImpostazioni"
                android:drawableStart="@drawable/settings"
                />

</androidx.coordinatorlayout.widget.CoordinatorLayout>